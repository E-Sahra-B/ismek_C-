@using MvcStokTakip.Models.Entity
@model List<tbl_Satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-1">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Satış Id</th>
                <th>SatilanUrun</th>
                <th>UrunMusterisi</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sts in Model)
            {
                <tr>
                    <td>@sts.Id</td>
                    <td>@sts.SatilanUrun</td>
                    <td>@sts.UrunMusterisi</td>
                    <td>@sts.Adet</td>
                    <td>@sts.Fiyat</td>
                    <td>@sts.Adet * @sts.Fiyat</td>
                </tr>
            }
        </tbody>
    </table>
</div>