@using MvcStokTakip.Models.Entity
@model List<tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-1">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Urun Id</th>
                <th>Marka</th>
                <th>Urun Adı</th>
                <th>Fiyat</th>
                <th>Stok Adet</th>
                <th>Kategori Adı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Id</td>
                    <td>@urun.Marka</td>
                    <td>@urun.UrunAdi</td>
                    <td>@urun.Fiyat</td>
                    <td>@urun.Stok</td>
                    <td>@urun.UrunKategori</td>
                </tr>
            }
        </tbody>
    </table>
</div>